{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": false
  },
  "npm": false,
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "out": [
        {
          "file": "package.json",
          "path": "version"
        },
        {
          "file": ".claude-plugin/marketplace.json",
          "path": "version"
        },
        {
          "file": "plugins/glean/.claude-plugin/plugin.json",
          "path": "version"
        }
      ]
    }
  }
}
